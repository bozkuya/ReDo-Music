@using ReDoMusic.Domain.Entities

@model List<Category>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">ImageUrl</th>
    </tr>
    </thead>
    <tbody>

        @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
                <td>@category.ImageUrl</td>
                <td><a asp-action="DeleteCategory" asp-route-id="@category.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }

    </tbody>
</table>